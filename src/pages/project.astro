---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
---

<BaseLayout title="作品">
  <MainCard title="作品" description="一大堆奇葩的东西....">
    <section class="py-4">
      <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
        <Icon name="lucide:link-2" class="w-6 h-6 text-primary" />
        <span>API接口</span>
      </h2>
      <div class="card bg-base-200 p-6">
        <ul class="space-y-6">
          {
            [
              {
                project: "随机ACG图片",
                description: "看看就好，别乱传哦♪(･ω･)ﾉ",
                url: "https://api-rps.southcat.cc/",
              },
            ].map((contrib) => (
              <li class="flex items-start gap-4">
                <div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
                  <Icon name="lucide:link" class="w-6 h-6 text-primary" />
                </div>
                <div>
                  <h3 class="text-lg font-bold">
                    <a
                      href={contrib.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:text-primary transition-colors flex items-center gap-1"
                    >
                      {contrib.project}
                      <Icon name="lucide:external-link" class="w-4 h-4" />
                    </a>
                  </h3>
                  <p class="text-base-content/80">{contrib.description}</p>
                </div>
              </li>
            ))
          }
        </ul>
      </div>
	  <br/>
	  <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
	    <Icon name="lucide:link-2" class="w-6 h-6 text-primary" />
	    <span>其他东西</span>
	  </h2>
	  <div class="card bg-base-200 p-6">
	    <ul class="space-y-6">
	      {
	        [
	          {
	            project: "登dua郎 - I",
	            description: "同题目，未成年人严禁进入，违者后果自负！",
	            url: "https://southcat.cc/ct",
	          },
			  {
			    project: "登dua郎 - II",
			    description: "同题目，未成年人严禁进入，违者后果自负！",
			    url: "https://southcat.cc/latenightvd",
			  },
	        ].map((contrib) => (
	          <li class="flex items-start gap-4">
	            <div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
	              <Icon name="lucide:line-chart" class="w-6 h-6 text-primary" />
	            </div>
	            <div>
	              <h3 class="text-lg font-bold">
	                <a
	                  href={contrib.url}
	                  target="_blank"
	                  rel="noopener noreferrer"
	                  class="hover:text-primary transition-colors flex items-center gap-1"
	                >
	                  {contrib.project}
	                  <Icon name="lucide:external-link" class="w-4 h-4" />
	                </a>
	              </h3>
	              <p class="text-base-content/80">{contrib.description}</p>
	            </div>
	          </li>
	        ))
	      }
	    </ul>
	  </div>
	  <div class="divider my-8">
	    <strong>未完待续</strong>
	  </div>
    </section>
	
  </MainCard>
</BaseLayout>
