---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FeatureCard from "@/components/mdx/FeatureCard.astro";
---

<BaseLayout title="作品">
	<MainCard>
		<style>
			.card:hover {
				transform: translateY(-2px);
			}
		</style>
		<section class="space-y-10">
			<div class="space-y-6">
				<h2 class="text-2xl font-bold flex items-center gap-2">
					<Icon name="material-symbols:cards-star" class="w-6 h-6 text-primary" />
					<span>奇妙之处</span>
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
					<FeatureCard
						title="够奇葩"
						description="各种笔者做的奇葩东西都在这!"
						icon="mdi:success-bold"
						color="oklch(0.7 0.2 30)"
						hoverEffect="scale-105"
					/>
					<FeatureCard
						title="持续更"
						description="笔者一做完项目就立即更新哒!"
						icon="lucide:alarm-clock"
						color="oklch(0.7 0.2 30)"
						hoverEffect="scale-105"
					/>
				</div>
			</div>
			
			<div class="space-y-6">
				<h2 class="text-2xl font-bold flex items-center gap-2">
					<Icon name="lucide:link-2" class="w-6 h-6 text-primary" />
					<span>API接口（v1）</span>
				</h2>
				<div class="card bg-gradient-to-br from-base-200 to-base-300 p-6 shadow-sm hover:shadow-md transition-shadow">
					<ul class="grid grid-cols-1 md:grid-cols-2 gap-4"> 
						{[
							{
								project: "随机ACG图片",
								description: "当前库存110多张♪(･ω･)ﾉ",
								url: "https://api-rps.southcat.cc/",
								icon: "lucide:image"
							},
							{
								project: "随机名言",
								description: "随机查看一句经典话语",
								url: "https://api-rdoc.southcat.cc/",
								icon: "lucide:quote"
							},
						].map((item) => (
							<li>
								<a href={item.url} target="_blank" rel="noopener noreferrer" 
									class="flex items-start gap-4 p-4 bg-base-100/80 hover:bg-base-100 rounded-lg transition-all group">
									<div class="flex-shrink-0 p-2 rounded-full bg-primary/10 text-primary">
										<Icon name={item.icon} class="w-5 h-5" />
									</div>
									<div>
										<h3 class="font-bold text-lg group-hover:text-primary transition-colors flex items-center gap-1">
											{item.project}
											<Icon name="lucide:external-link" class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" />
										</h3>
										<p class="text-sm text-base-content/70 mt-1">{item.description}</p>
									</div>
								</a>
							</li>
						))}
					</ul>
				</div>
			</div>

			<div class="space-y-6">
				<h2 class="text-2xl font-bold flex items-center gap-2">
					<Icon name="material-symbols:toolbar" class="w-6 h-6 text-primary" />
					<span>无语工具</span>
				</h2>
				<div class="card bg-gradient-to-br from-base-200 to-base-300 p-6 shadow-sm hover:shadow-md transition-shadow">
					<ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
						{[
							{
								project: "生成您的没墨档案",
								description: "有点··的东西",
								url: "succubus",
								icon: "lucide:file-text"
							},
							{
								project: "测测您的今日运势",
								description: "测测您今天的运势如何~",
								url: "fortune",
								icon: "lucide:clover"
							},
							{
								project: "生成您的阶级档案",
								description: "看看您在古代的阶级如何~",
								url: "class",
								icon: "lucide:crown"
							},
							{
								project: "测测您与ta的缘分",
								description: "您和ta的缘分有多少呢~",
								url: "fate",
								icon: "lucide:heart"
							},
							{
								project: "生成您的中二档案",
								description: "即刻生成您的中二病档案~",
								url: "zer",
								icon: "mdi:brain"
							},
							{
								project: "查看您的黑暗料理程度",
								description: "您在黑暗料理界的造诣有多少呢~",
								url: "dcuisine",
								icon: "mdi:cook"
							},
							{
								project: "小Loli的乞讨",
								description: "面对小Loli的乞讨，你如何抉择~",
								url: "loli",
								icon: "mdi:human-female"
							},
							{
								project: "广告位",
								description: "为美观占位用，有意向者可联系",
								url: "",
								icon: "mdi:advertisements"
							}
						].map((item) => (
							<li>
								<a href={item.url} class="flex items-start gap-4 p-4 bg-base-100/80 hover:bg-base-100 rounded-lg transition-all group">
									<div class="flex-shrink-0 p-2 rounded-full bg-primary/10 text-primary">
										<Icon name={item.icon} class="w-5 h-5" />
									</div>
									<div>
										<h3 class="font-bold text-lg group-hover:text-primary transition-colors flex items-center gap-1">
											{item.project}
											<Icon name="lucide:arrow-right" class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" />
										</h3>
										<p class="text-sm text-base-content/70 mt-1">{item.description}</p>
									</div>
								</a>
							</li>
						))}
					</ul>
				</div>
			</div>

			<div class="space-y-6">
				<h2 class="text-2xl font-bold flex items-center gap-2">
					<Icon name="lucide:pen-square" class="w-6 h-6 text-primary" />
					<span>特色文化</span>
				</h2>
				<div class="card bg-gradient-to-br from-base-200 to-base-300 p-6 shadow-sm hover:shadow-md transition-shadow">
					<ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
						{[
							{
								project: "冯·诺曼奴",
								description: "精品原创短篇，精彩源源不断！",
								url: "https://docs.qq.com/doc/DZWJVdGpSVW9Md0V4",
								icon: "lucide:book-open",
								tag: "更新中"
							},
							{
								project: "菠萝风暴：顶级idol的逆袭之路！",
								description: "精品原创短篇，精彩源源不断！",
								url: "https://docs.qq.com/doc/DZXJmWGdWZVBORktX",
								icon: "lucide:book-open",
								tag: "待规划"
							},
							{
								project: "追妻修罗场：天降白月光VS清纯小青梅",
								description: "精品原创短篇，精彩源源不断！",
								url: "https://docs.qq.com/doc/DZXVoVnViUG5pbk1E",
								icon: "lucide:book-open",
								tag: "已完结"
							},
							{
								project: "从循声村到蒙氏王座：西北三狼跪碎膝盖骨",
								description: "精品原创短篇，精彩源源不断！",
								url: "https://docs.qq.com/doc/DZVhKb2RnUGJmRXpO",
								icon: "lucide:book-open",
								tag: "更新中"
							},
							{
								project: "破晓之烬：洋枪四杰",
								description: "精品原创短篇，精彩源源不断！",
								url: "https://docs.qq.com/DZU5mbVJKaWpJa3p4",
								icon: "lucide:book-open",
								tag: "更新中"
							},
							{
								project: "广告位",
								description: "为美观占位用，有意向者可联系",
								url: "",
								icon: "mdi:advertisements",
								tag: "AD"
							}
						].map((item) => (
							<li>
								<a href={item.url} target="_blank" rel="noopener noreferrer" 
									class="flex items-start gap-4 p-4 bg-base-100/80 hover:bg-base-100 rounded-lg transition-all group relative">
									{item.tag && (
										<span class={`font-bold absolute -top-2 -right-2 text-xs px-2 py-1 rounded-full 
											${item.tag === '待规划' ? 'bg-blue-500/90 text-white' : 
											item.tag === '更新中' ? 'bg-red-500/90 text-white' : 
											item.tag === '已完结' ? 'bg-green-500/90 text-white' :
											item.tag === '待重做' ? 'bg-purple-500/90 text-white' :
											'bg-yellow-500/90 text-base-100'}`}>
											{item.tag}
										</span>
									)}
									<div class="flex-shrink-0 p-2 rounded-full bg-primary/10 text-primary">
										<Icon name={item.icon} class="w-5 h-5" />
									</div>
									<div>
										<h3 class="font-bold text-lg group-hover:text-primary transition-colors">
											{item.project}
										</h3>
										<p class="text-sm text-base-content/70 mt-1">{item.description}</p>
										<div class="mt-2 flex items-center gap-1 text-xs text-primary">
											<Icon name="lucide:external-link" class="w-3 h-3" />
											<span class="group-hover:underline">查看详情</span>
										</div>
									</div>
								</a>
							</li>
						))}
					</ul>
				</div>
			</div>

			<div class="divider my-8 text-primary">
				<Icon name="lucide:sparkles" class="w-6 h-6" />
				<span class="mx-2 font-bold">To Be Continued...</span>
				<Icon name="lucide:sparkles" class="w-6 h-6" />
			</div>
		</section>
	</MainCard>
</BaseLayout>

