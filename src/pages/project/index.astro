---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import FeatureCard from "@/components/mdx/FeatureCard.astro";
---

<BaseLayout title="作品">
	<MainCard title="作品">
		<section class="py-4">
			<h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
				<Icon name="material-symbols:cards-star" class="w-6 h-6 text-primary" />
				<span>奇妙之处</span>
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-2">
				<FeatureCard
				    title="够奇葩"
				    description="各种笔者做的奇葩东西都在这!"
				    icon="mdi:success-bold"
				    color="oklch(0.7 0.2 30)"
				/>
				<FeatureCard
				    title="持续更"
				    description="笔者一做完项目就立即更新哒!"
				    icon="lucide:alarm-clock"
				    color="oklch(0.7 0.2 30)"
				/>
			</div>
			<br/>
			<h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
				<Icon name="lucide:link-2" class="w-6 h-6 text-primary" />
				<span>API接口（v1）</span>
			</h2>
			<div class="card bg-base-200 p-6">
				<ul class="space-y-6">
					{[
						{
							project: "随机ACG图片",
							description: "当前库存110多张♪(･ω･)ﾉ",
							url: "https://api-rps.southcat.cc/",
						},
						{
							project: "随机名言",
							description: "随机查看一句经典话语。",
							url: "https://api-rdoc.southcat.cc/",
						},
					].map((contrib) => (
					<li class="flex items-start gap-4">
						<div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
							<Icon name="lucide:link" class="w-6 h-6 text-primary" />
						</div>
						<div>
							<h3 class="text-lg font-bold">
								<a href={contrib.url} target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors flex items-center gap-1">
									{contrib.project}
									<Icon name="lucide:external-link" class="w-4 h-4" />
								</a>
							</h3>
							<p class="text-base-content/80">{contrib.description}</p>
						</div>
					</li>
						))
					}
				</ul>
			</div>
			<br/>
			<h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
				<Icon name="material-symbols:toolbar" class="w-6 h-6 text-primary" />
				<span>No用工具</span>
			</h2>
			<div class="card bg-base-200 p-6">
				<ul class="space-y-6">
					{[
						{
							project: "生成您的没墨档案",
							description: "有点··的东西",
							url: "succubus",
						},
						{
							project: "测测您的今日运势",
							description: "测测您今天的运势如何~",
							url: "fortune",
						},
						{
							project: "生成您的阶级档案",
							description: "看看您在古代的阶级如何~",
							url: "class",
						},
						{
							project: "测测您与ta的缘分",
							description: "您和ta的缘分有多少呢~",
							url: "match"
						}
					].map((contrib) => (
					<li class="flex items-start gap-4">
						<div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
							<Icon name="mdi:wrench" class="w-6 h-6 text-primary" />
						</div>
						<div>
							<h3 class="text-lg font-bold">
								<a href={contrib.url} target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors flex items-center gap-1">
									{contrib.project}
									<Icon name="lucide:external-link" class="w-4 h-4" />
								</a>
							</h3>
							<p class="text-base-content/80">{contrib.description}</p>
						</div>
					</li>
						))
					}
				</ul>
			</div>
			<br/>
			<h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
				<Icon name="lucide:link-2" class="w-6 h-6 text-primary" />
				<span>特色文化</span>
			</h2>
				<div class="card bg-base-200 p-6">
					<ul class="space-y-6">
						{[
							{
								project: "登dua郎 - I",
								description: "同标题，未成年人严禁进入，违者后果自负！",
								url: "https://southcat.cc/ct",
							},
							{
								project: "登dua郎 - II",
								description: "同上",
								url: "https://southcat.cc/latenightvd",
							},
							{
								project: "冯·奴（完结）",
								description: "精品原创短篇小说，精彩源源不断！！",
								url: "https://docs.qq.com/doc/DZWJVdGpSVW9Md0V4",
							},
							{
								project: "追妻修罗场：天降白月光VS清纯青梅！（完结）",
								description: "精品原创短篇小说，精彩源源不断！！",
								url: "https://docs.qq.com/doc/DZXVoVnViUG5pbk1E",
							},
							{
								project: "从循声村到蒙氏王座：西北三狼跪碎膝盖骨！（更新中）",
								description: "精品原创短篇小说，精彩源源不断！！",
								url: "https://docs.qq.com/doc/DZVhKb2RnUGJmRXpO",
							},
						].map((contrib) => (
						<li class="flex items-start gap-4">
							<div class="flex-shrink-0 bg-base-300 p-2 rounded-full">
								<Icon name="lucide:line-chart" class="w-6 h-6 text-primary" />
							</div>
							<div>
								<h3 class="text-lg font-bold">
									<a href={contrib.url} target="_blank" rel="noopener noreferrer" class="hover:text-primary transition-colors flex items-center gap-1">
										{contrib.project}
										<Icon name="lucide:external-link" class="w-4 h-4" />
									</a>
								</h3>
								<p class="text-base-content/80">{contrib.description}</p>
							</div>
						</li>
							))
						}
					</ul>
				</div>
			<div class="divider my-8">
				<strong>To Be Continued...</strong>
			</div>
		</section>
	</MainCard>
</BaseLayout>
